{
    "name": "leads-management-system",
    "version": "1.0.0",
    "description": "Advanced Leads Management System for Admin Dashboard",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "analyze": "vite-bundle-analyzer public/build/manifest.json",
        "build:analyze": "vite build --mode analyze && npm run analyze",
        "lint": "eslint resources/js --ext .js,.vue",
        "lint:fix": "eslint resources/js --ext .js,.vue --fix",
        "test:js": "jest"
    },
    "keywords": [
        "laravel",
        "vue",
        "leads",
        "management",
        "admin",
        "dashboard"
    ],
    "author": "Development Team",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.22.0",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/container-queries": "^0.1.1",
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "@vitejs/plugin-vue": "^4.3.4",
        "@vue/compiler-sfc": "^3.3.4",
        "@vue/eslint-config-prettier": "^9.0.0",
        "@vue/test-utils": "^2.4.0",
        "autoprefixer": "^10.4.14",
        "axios": "^1.4.0",
        "eslint": "^8.44.0",
        "eslint-plugin-vue": "^9.15.1",
        "jest": "^29.6.1",
        "laravel-vite-plugin": "^0.8.1",
        "lodash": "^4.17.21",
        "postcss": "^8.4.24",
        "prettier": "^3.0.0",
        "rollup-plugin-visualizer": "^5.9.2",
        "sass": "^1.63.6",
        "tailwindcss": "^3.3.2",
        "vite": "^4.4.9",
        "vite-bundle-analyzer": "^0.7.0",
        "vite-plugin-compression": "^0.5.1"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.14",
        "@heroicons/vue": "^2.0.18",
        "@vueuse/core": "^10.2.1",
        "chart.js": "^4.4.0",
        "date-fns": "^2.30.0",
        "laravel-echo": "^2.2.4",
        "lodash-es": "^4.17.21",
        "lucide": "^0.292.0",
        "pinia": "^2.1.4",
        "pusher-js": "^8.4.0",
        "qrcode": "^1.5.3",
        "sweetalert2": "^11.10.1",
        "vue": "^3.3.4"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ],
    "jest": {
        "testEnvironment": "jsdom",
        "moduleFileExtensions": [
            "js",
            "vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            "^.+\\.vue$": "@vue/vue3-jest"
        },
        "moduleNameMapping": {
            "^@/(.*)$": "<rootDir>/resources/js/$1"
        }
    },
    "eslintConfig": {
        "root": true,
        "env": {
            "node": true,
            "browser": true,
            "es2021": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/vue3-recommended",
            "@vue/prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2021,
            "sourceType": "module"
        },
        "rules": {
            "vue/multi-word-component-names": "off",
            "vue/no-multiple-template-root": "off",
            "no-console": "warn",
            "no-debugger": "warn"
        }
    },
    "prettier": {
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "es5",
        "printWidth": 100,
        "bracketSpacing": true,
        "arrowParens": "avoid"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/company/leads-management.git"
    },
    "bugs": {
        "url": "https://github.com/company/leads-management/issues"
    },
    "homepage": "https://github.com/company/leads-management#readme"
}
